<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ankit.smartattendancesystem.CreateGroupActivity">

    <TextView
        android:text="Create a new Group - "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/createGroupMessage"/>

    <TextView
        android:id="@+id/txt_groupname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Group Name"
        android:layout_below="@+id/createGroupMessage"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/groupname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_groupname"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Duration (hours)"
        android:layout_below="@+id/groupname"
        />

    <EditText
        android:id="@+id/duration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_duration"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/txt_percentage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Percentage"
        android:layout_below="@+id/duration"
        />
    <EditText
        android:id="@+id/percentage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_percentage"
        android:inputType="text"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/createGroupButton"
        android:layout_below="@+id/percentage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:onClick="createGroup"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:layout_alignBottom="@+id/createGroupButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="backToUserHome"/>

</RelativeLayout>
